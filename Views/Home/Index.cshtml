    Purpose: This Razor view represents the home page of the Student Management System for Central University of Technology (CUT).
             It includes user information, a carousel showcasing images of the university, and a welcome section with upcoming activities.
-->
@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* User info section */
    
    .user {
        margin-left: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

        .user h1 {
            margin-bottom: 10px;
            font-size: 1.2em;
        }

    /* Main content section */
    .container-fluid {
        padding: 20px;
    }

    h1 {
        color: darkblue;
        text-align: center;
    }

    .border-bottom {
        border-bottom: 1px solid #ddd;
    }

    /* Welcome section */
    .welcome {
        margin-bottom: 30px;
    }

    h2 {
        margin-top: 0; 
    }

    .justify-content-evenly p {
        line-height: 1.5;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    /* Basic styles for layout and presentation  */
    body {
        font-family: sans-serif;
        margin: 20px;
        margin-bottom: 80px;
    
    }

    .activity-card {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 15px;
        cursor: pointer;
        width: 1300px; 
        margin-left: auto;
        margin-right: auto;
        background-color: lightgray;
        
    }

        .activity-card:hover {
            background-color: #f5f5f5;
        }

    .activity-image {
        width: 100px;
        height: 100px;
        float: left;
        margin-right: 10px;
    }

    .fa-solid{
       
        font-size: 23px;
    }

    .activity-details {
        clear: both; 
    }

    .activity-title {
        font-weight: bold;
        margin-bottom: 5px;
    }


    /* footer style */
    .footer {
        position: sticky;
        bottom: 0;
        width: 100%;
        background-color: #f0f0f0;
    }

    .carousel-item img {
        object-fit: cover;
        transition: transform 0.8s ease-in-out;
    }

    .image-container {
        margin-left: 20%;
        width: 800px;
        height: 530px;
        overflow: hidden;
    }

</style>

<div class="user">
    <h1>User Logged</h1>
    <p>User Id: @ViewData["UserID"]</p>
    <p>User Name: @ViewData["UserName"]</p>
    <p>User Role: @ViewData["UserRole"]</p>
</div>

<h1 style="color: darkblue">Central University of Technology</h1>
<div class="container-fluid border-bottom mb-3">
    <h2>Student Management System</h2>
    <br />
</div>

<div id="carouselControls" class="carousel-slide" data-bs-ride="carousel" data-bs-interval="2000">

    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="image-container">
                <img src="~/images/cut.jpg" alt="Central University of Technology" />
            </div>
        </div>
        <div class="carousel-item">
            <div class="image-container">
                <img src="~/images/cut1.jpeg" alt="Central University of Technology" />
            </div>
        </div>
        <div class="carousel-item">
            <div class="image-container">
                <img src="~/images/cut2.jpg" alt="Central University of Technology" />
            </div>
        </div>
    </div>
    
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 welcome">
            <h2>Welcome to the Student Management System</h2>
               
                <div class="activity-card" data-details-id="activity-1">
                    
                    <img class="activity-image" src="~/images/princess-bride.jpg" alt="Activity Image 1"> <div class="activity-details">
                        <h3 class="activity-title">Movie Night: The Princess Bride</h3>
                    <p><i class="fa-solid fa-calendar-days"></i> Friday, April 19</p>
                    <p><i class="fa-solid fa-clock"></i> 07:00 PM</p>
                    <p><i class="fa-solid fa-location-dot"></i> Artec Hall</p>
                    <a href="~/EventDetails.html">More Details..</a>
                    </div>
                </div>
                <div class="activity-card" data-details-id="activity-2">
                    <img class="activity-image" src="~/images/tech.jpg" alt="Activity Image 2"> <div class="activity-details">
                        <h3 class="activity-title">Guest Speaker: Tech Industry Panel</h3>
                    <p><i class="fa-solid fa-calendar-days"></i> Monday, April 22</p>
                    <p><i class="fa-solid fa-clock"></i> 12:00 PM</p>
                    <p><i class="fa-solid fa-location-dot"></i> BHP, Lab 225</p>
                    <a href="~/EventDetails1.html">More Details...</a>
                   </div>
                </div>
                    <div class="activity-card" data-details-id="activity-2">
                        <img class="activity-image" src="~/images/karaoke.jpg" alt="Activity Image 2"> <div class="activity-details">
                            <h3 class="activity-title">Karaoke Night: Sing Your Lungs Out</h3>
                    <p><i class="fa-solid fa-calendar-days"></i> Wednesday, April 24</p>
                    <p><i class="fa-solid fa-clock"></i> 06:00 PM</p>
                    <p><i class="fa-solid fa-location-dot"></i> CUT FNB Rugby Stadium</p>
                    <a href="~/EventDetails2.html">More Details...</a>
                       </div>
                    </div>
        </div>
             

                <script>
                    // Simple Javascript to handle click events and display details
                    const activityCards = document.querySelectorAll('.activity-card');

                    activityCards.forEach(card => {
                        card.addEventListener('click', function () {
                            const detailsId = this.dataset.detailsId;
                            const detailsContent = document.getElementById(detailsId);
                            // You can fetch detailed information from a server here based on detailsId
                            // For now, let's assume detailsContent is pre-defined in the HTML
                            if (detailsContent) {
                                detailsContent.style.display = "block";
                            }
                        });
                    });
                </script>
         


    </div>
</div>

 
