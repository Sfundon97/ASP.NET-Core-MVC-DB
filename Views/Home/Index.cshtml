@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* User info section */
    
    .user {
        margin-left: auto; /* Center the user info section horizontally */
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

        .user h1 {
            margin-bottom: 10px;
            font-size: 1.2em; /* Adjust font size for heading */
        }

    /* Main content section */
    .container-fluid {
        padding: 20px;
    }

    h1 {
        color: darkblue;
        text-align: center;
    }

    .border-bottom {
        border-bottom: 1px solid #ddd;
    }

    /* Welcome section */
    .welcome {
        margin-bottom: 30px;
    }

    h2 {
        margin-top: 0; /* Remove top margin for welcome heading */
    }

    .justify-content-evenly p {
        line-height: 1.5; /* Adjust line spacing for readability */
    }

    /* Build from scratch section */
    .build-section {
        margin-top: 50px; /* Add some space between sections */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    /* Basic styles for layout and presentation  */
    body {
        font-family: sans-serif;
        margin: 20px;
    }

    .activity-card {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 15px;
        cursor: pointer; /* Change cursor to indicate clickability */
        width: 1300px; /* Adjust this value to your desired width */
        margin-left: auto;
        margin-right: auto;
        background-color: lightgray;
        
    }

        .activity-card:hover {
            background-color: #f5f5f5;
        }

    .activity-image {
        width: 100px;
        height: 100px;
        float: left;
        margin-right: 10px;
    }

    .fa-solid{
        color: oranger;
        font-size: 23px;
    }

    .activity-details {
        clear: both; /* Clear any previous floats */
    }

    .activity-title {
        font-weight: bold;
        margin-bottom: 5px;
    }


    /* Add a footer class and style */
    .footer {
        position: sticky;
        bottom: 0;
        width: 100%;
        background-color: #f0f0f0; /* Example background color */
    }

    .carousel-item img {
        object-fit: cover; /* Resize images to cover container */
        transition: transform 0.8s ease-in-out;
    }

    .image-container {
        margin-left: 20%;
        width: 800px;
        height: 530px;
        overflow: hidden; /* Prevent image overflow if dimensions differ */
    }

</style>

<div class="user">
    <h1>User Logged</h1>
    <p>User Id: @ViewData["UserID"]</p>
    <p>User Name: @ViewData["UserName"]</p>
    <p>User Role: @ViewData["UserRole"]</p>
</div>

